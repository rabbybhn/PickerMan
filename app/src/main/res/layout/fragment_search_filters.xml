<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="200dip"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- category_container -->

                    <LinearLayout
                        android:id="@+id/category_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/category_checkbox_status"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray" />

                            <TextView
                                android:id="@+id/textViewCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/label_add_category" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/categoryContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorTopBarBackground"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/choiceCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- sort_type_container -->

                    <LinearLayout
                        android:id="@+id/sort_type_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/sort_type_checkbox_status"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray" />

                            <TextView
                                android:id="@+id/textViewSortType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/label_select_sort_type" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sortTypeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorTopBarBackground"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/choiceSortType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- moderation_container -->

                    <LinearLayout
                        android:id="@+id/moderation_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/moderation_type_checkbox_status"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray" />

                            <TextView
                                android:id="@+id/textViewModeration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/label_select_moderation_type" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/moderationContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorTopBarBackground"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Spinner
                                android:id="@+id/choiceModeration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:spinnerMode="dropdown" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- location_container -->

                    <LinearLayout
                        android:id="@+id/location_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/location_checkbox_status"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray" />

                            <TextView
                                android:id="@+id/textView0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/label_add_location_to_item" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/selectLocationButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/button_gray"
                            android:text="@string/label_item_location_placeholder"
                            android:textColor="@color/gray" />

                    </LinearLayout>

                    <!-- distance_container -->

                    <LinearLayout
                        android:id="@+id/distance_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/distance_checkbox_status"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="0"
                                android:src="@drawable/ic_checkbox_gray" />

                            <TextView
                                android:id="@+id/textViewDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:text="@string/label_select_distance" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/distanceContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal" >

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/choiceDistance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_large"
                                android:max="1495"
                                android:progress="25"
                                android:thumb="@drawable/seek_thumb_primary_outline" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/resetFiltersButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/action_reset_filters"
                            android:textColor="@color/light_blue" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/setFiltersButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:layout_weight="0"
                        android:background="@drawable/button_primary"
                        android:text="@string/action_set_filters"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>